<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".PracticalTest01Var05MainActivity">

    <!-- Buton de navigare către activitatea secundară -->
    <Button
        android:id="@+id/navigate_to_secondary_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="NAVIGATE TO SECONDARY ACTIVITY" />

    <!-- Buton colț stânga sus -->
    <Button
        android:id="@+id/top_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP LEFT"
        android:layout_below="@+id/navigate_to_secondary_activity_button"
        android:layout_alignParentStart="true" />

    <!-- Buton colț dreapta sus -->
    <Button
        android:id="@+id/top_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP RIGHT"
        android:layout_below="@+id/navigate_to_secondary_activity_button"
        android:layout_alignParentEnd="true" />

    <!-- Buton centru -->
    <Button
        android:id="@+id/center_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CENTER"
        android:layout_below="@+id/top_left_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Buton colț stânga jos -->
    <Button
        android:id="@+id/bottom_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM LEFT"
        android:layout_below="@+id/center_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- Buton colț dreapta jos -->
    <Button
        android:id="@+id/bottom_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM RIGHT"
        android:layout_below="@+id/center_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <!-- Câmp de text -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_left_button"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_marginTop="16dp" />

</RelativeLayout>
